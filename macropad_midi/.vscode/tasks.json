{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run: run UI simulation",
            "type": "shell",
            "command": "python3 ${workspaceFolder}/project/new_ui.py",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "deploy: copy code.py to macropad",
            "type": "shell",
            "command": "cp -R ${workspaceFolder}/project/code.py /media/tammy/CIRCUITPY",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },    
        {
            "label": "deploy: copy project to macropad",
            "type": "shell",
            "command": "cp -R ${workspaceFolder}/project/code.py ${workspaceFolder}/project/lib /media/tammy/CIRCUITPY",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "piku: deploy project to macropad",
            "type": "shell",
            "command": "piku deploy",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "piku: install project dependencies",
            "type": "shell",
            "command": "piku install",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "piku: open serial console",
            "type": "shell",
            "command": "piku serial",
            "group": {
                "kind": "test",
                "isDefault": false
            }
        },
    ]
}
